{% extends 'default.html.twig' %}

{% set hasBreadcrumb = true %}

{% block title %}{{ 'Sponsors'|trans }} â€” {{ 'The Kings\' Ride in Doloplazy'|transchoice(1) }} {{ kingsRide.year }}{% endblock %}

{% block breadcrumb %}
<span class="breadcrumb-item active">{{ 'The Kings\' Ride in Doloplazy'|transchoice(1) }} {{ kingsRide.year }}</span>
<span class="breadcrumb-item active">{{ 'Sponsors'|trans }}</span>
{% endblock %}

{% block content %}
<div class="container-fluid">
    {% for sponsorKind in sponsors|keys %}
        <div class="mb-5">
            <h2>{{ sponsorKind }}</h2>
            <div class="d-flex flex-wrap">
            {% for sponsor in sponsors[sponsorKind] %}
                <h3 class="sr-only">{{ sponsor.name }}</h3>
                {% if sponsor.logo %}
                <img src="{{ asset(sponsor.logo.webPath) }}" title="{{ sponsor.name }}" alt="{{ sponsor.logo.description }}" height="60" class="mr-4 mb-4">
                {% else %}
                <span class="mr-4 mb-4">{{ sponsor.name }}</span>
                {% endif %}
            {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
